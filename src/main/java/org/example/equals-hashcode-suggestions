Actor
@Override
public boolean equals(Object o) {
    if (this == o) return true;
    if (!(o instanceof Actor actor)) return false;
    return Objects.equals(id, actor.id);
}

@Override
public int hashCode() {
    return Objects.hash(id);
}


Director
@Override
